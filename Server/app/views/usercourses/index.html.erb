<div  style="padding-top:0" class="row  whiteUI">
<div class="container">
  <h1 style="margin-topo:0">Courses you've taken</h1>
  
  <div class="table-responsive">
    <table class="table table-striped">
      <tr>
        <th>Course</th>
        <th>Grade</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      <% @usercourse.each do |course| %>
      <tr>
        <td><%= course.course %></td>
        <td><%= course.grade %></td>
        <td><%= link_to 'Edit', edit_usercourse_path(course) %></td>
        <td><%= link_to 'Destroy', usercourse_path(course),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
  </table>
  </div>
  
  <br/>
  <a class="btn btn-default btn-lg" href=<%= new_usercourse_path %>>Add course</a>
  
</div>
</div>



