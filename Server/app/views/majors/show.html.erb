<%= link_to 'Back to majors', majors_path %><br/>
<%= link_to 'Add or edit courses for this major', edit_major_path(@major) %><br/>
<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

<% @courses.each do |course| %>
  <div class="panel panel-default">
  
    <div class="panel-heading" role="tab" id="">
      <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= course.id %>" aria-expanded="false" id="heading<%= course.id %>" aria-controls="collapseOne">
          <%= course.title %>
      </a>
    </div>
    <div id="collapse<%= course.id %>" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading<%= course.id %>">
      <div class="panel-body">
        <% if course.description and course.coreqDesc and course.prereqDesc %>
          <code>Description:</code> <%= course.description %><br/>
          <code>Corequisites:</code> <%= course.coreqDesc %><br/>
          <code>Prerequisites:</code> <%= course.prereqDesc %><br/>
        <%end%>
      </div>
    </div>
  </div>
<% end %>
</div>